<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <div class="alert alert-info" role="alert">
      <h3 class="alert-heading"><%= t('.header', title: @test_passage.test.title) %></h3>
    </div>
      <% result = result_in_persent(@test_passage) %>
      <% if @test_passage.success? %>
      <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Well done!</h4>
          <p>Test Passed! Result =
          <font color ='green'>
      <% else %>
      <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Ohoh, No!</h4>
          Test Not Passed! Result =
          <font color ='red'>
      <% end %>
      <%= result %>%
          </font>
      </div>

    <p><%= button_to t('.back_to'), root_path, class: 'btn btn-primary', method: :get %></p>
  </div>
</div>
<table align = 'center'>
<tr>
    <% BadgeUser.seconds_ago.each do |badge_users| %>
    <td>
    <div class="card"  style="width: 18rem;">
      <%= content_tag :img, nil, src: root_path + badge_users.badge.picture.url, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= badge_users.badge.title %> </h5>
          <div class="alert alert-success" role="alert">
            Бейдж получен!
          </div>
      </div>
    </div>
  </td>
    <% end %>
  </tr>
  </table>
</div>
