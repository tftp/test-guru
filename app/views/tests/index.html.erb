
<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <div class="alert alert-info" role="alert">
      <h3 class="alert-heading"><%= t('.header') %></h3>
    </div>
    <table class="table table-hover table-sm">
      <tr>
        <th class="text-nowrap sort-by-title pointer">
          <%= t('.title_header') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>
        </th>
        <th class="text-nowrap"><%= t('.question_header') %></th>
        <th class="text-nowrap"><%= t('.action_header') %></th>
      </tr>
      <%= render @test %>
    </table>

  </div>
</div>
