<div id= 'header' >
  <h1>Welcome to <%= link_to 'Test-guru', root_path %></h1>
  <% if logged_in? %>
    <p class="nav user">
      Welcom, <b><%= current_user.email.scan(/\w+/)[0].capitalize %></b> Guru.
      <%= link_to 'Logout', logout_path %>
    </p>
  <% else %>
    <p class="nav user">
      <%= link_to 'Signup', signup_path %> |
      <%= link_to 'Login', login_path %>
    </p>
  <% end %>

</div>
