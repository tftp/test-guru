<div class="row justify-content-center mt-3">
  <div class="col col-md-6">
    <div class="alert alert-info" role="alert">
      <h3 class="alert-heading"><%= t('.header') %></h3>
    </div>

    <p>
      <%= link_to t('.new_test'), new_admin_test_path, class: "btn btn-primary mb-4" %>
    </p>

    <%= render 'shared/errors', resource: @test %>

    <table class="table table-hover table-sm">
      <thead>
        <tr>
          <th class="text-nowrap sort-by-title pointer">
            <%= t('.title_header') %>
            <%= octicon 'arrow-up', class: 'text-success hide' %>
            <%= octicon 'arrow-down', class: 'text-success hide' %>
          </th>
          <th class="align-middle"><%= t('.question_header') %></th>
          <th class="align-middle"><%= t('.action_header') %></th>
        </tr>
      </thead>
      <tbody>
        <%= render @tests %>
      </tbody>

    </table>
  </div>
</div>
